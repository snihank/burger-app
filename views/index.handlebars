<h1>Burgers App</h1>

<h2>We can order burgers by typing the name</h2>



<div id = 'dev' class='container'>
  <div class='row'>
    <div class = 'col-6'>

{{#each burgers}}
{{#unless this.devoured}}

<div id = 'each_burger' class = "burger_list">
<img src = './assets/img/1.jpg' alt = 'No image' width = '50' height = '50'>

<p>{{id}}.{{burger_name}}</p>

<p>{{is_devoured}}</p>

<button id = 'burger_devoured' class = 'btn btn-success' type="submit">Devour It</button>
</div>

{{/unless}}
{{/each}}

</div>
</div>
</div>

<div class = "container">
<div class = "row">
  <div class = "col-6">
    
  </div>
</div>
</div>



<div class='container'>
<h2>Add a Burger</h2>
<form class="create-form" >

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger_input" name="name">
  </div>

  <button id = "add_burger" type="submit" method="POST"
  action="/burgers/update?_method=PUT" >Submit</button>

</form>
</div>


